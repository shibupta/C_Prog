#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int fnum,snum,choice,ans;

	printf("Please enter first number :");
	scanf("%d",&fnum);
	printf("Please enter second number :");
	scanf("%d",&snum);
	printf("1. Addition \n2. Subtraction \n3. Multiplication \n4. Division \n===============");
	printf("Please choose your choice \n");
	scanf("%d",&choice);
	if(choice==1){
		ans=fnum+snum;
		printf("Your Answer is : ",ans);
	}
	else if(choice==2){
			ans=fnum-snum;
			printf("Your Answer is : ",ans);
		}
	else if(choice==3){
			ans=fnum*snum;
			printf("Your Answer is : ",ans);
		}
	else if(choice==4){
			ans=fnum/snum;
			printf("Your Answer is : ",ans);
		}
	else{
		printf("Your entered invalid choice")
	}
	return EXIT_SUCCESS;
}

